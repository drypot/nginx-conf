
# osoky.com

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/osoky.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/osoky.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/osoky.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name www.osoky.com;

  return 301 https://osoky.com$request_uri;
}

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/osoky.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/osoky.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/osoky.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name osoky.com;

  root /data/web/raysoda/public;

  client_max_body_size 25m;
  client_body_temp_path /data2/nginx-temp;
  
  location / {
    try_files $uri @app;
  }

  location @app {
    proxy_pass http://localhost:8030;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/osoky.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/osoky.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/osoky.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name file.osoky.com;

  root /data2/osoky/public;

  location / {
    valid_referers none blocked osoky.com;
    if ($invalid_referer) {
      return   403;
    }
  }
}
