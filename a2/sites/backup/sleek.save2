
# sleek.the-oz.net

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/sleek.the-oz.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/sleek.the-oz.net/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/sleek.the-oz.net/chain.pem;
  include /data/nginx/ssl.inc;

  server_name sleek.the-oz.net;

  root /data/web/sleek/public;

  client_max_body_size 512m;

  location / {
    try_files $uri @app;
  }

  location @app {
    proxy_pass http://localhost:8000;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/sleek.the-oz.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/sleek.the-oz.net/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/sleek.the-oz.net/chain.pem;
  include /data/nginx/ssl.inc;

  server_name sleekfile.the-oz.net;

  root /data/web/sleek/upload/sleek/public;
}
