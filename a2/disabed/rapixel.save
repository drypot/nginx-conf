
# rapixel.com

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/rapixel.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/rapixel.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/rapixel.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name www.rapixel.com;

  return 301 https://rapixel.com$request_uri;
}

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/rapixel.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/rapixel.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/rapixel.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name rapixel.com;

  root /data/web/raysoda/public;

  client_max_body_size 25m;
  client_body_temp_path /data2/nginx-temp;
  
  location / {
    try_files $uri @app;
  }

  location @app {
    proxy_pass http://localhost:8020;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 443 ssl http2;
  ssl_certificate /etc/letsencrypt/live/rapixel.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/rapixel.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/rapixel.com/chain.pem;
  include /data/nginx/ssl.inc;

  server_name file.rapixel.com;

  root /data2/rapixel/public;

  location / {
    valid_referers none blocked rapixel.com;
    if ($invalid_referer) {
      return   403;
    }
  }
}

